# Environment Configuration Template
# Copy this file to .env or .env.production and fill in your actual values
# NEVER commit .env files to version control - they contain sensitive information

# ============================================
# REQUIRED: Gemini AI API Key
# ============================================
# Get your API key from Google AI Studio: https://aistudio.google.com/app/apikey
# This is REQUIRED for Gemini AI features to work
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Configuration (optional)
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_CACHE_TTL=3600

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sports_analytics
DATABASE_ECHO=False

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Security Settings
# ============================================
SECRET_KEY=change-me-in-production
ADMIN_TOKEN=your_admin_token_here

# ============================================
# External API Keys (Optional)
# ============================================
SPORTS_DATA_API_KEY=
API_FOOTBALL_KEY=
THESPORTSDB_KEY=
SPORTSMONKS_API_KEY=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Cache Settings
# ============================================
CACHE_ENABLED=True
CACHE_DEFAULT_TTL=300
